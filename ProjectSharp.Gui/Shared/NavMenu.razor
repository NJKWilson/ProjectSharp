@using AuthenticationState = ProjectSharp.Gui.Features.Auth.AuthenticationState
@inject AuthenticationState _authenticationState

<MudNavMenu>
    <MudNavLink Href="/">Dashboard</MudNavLink>
    <MudNavLink Href="/servers">Servers</MudNavLink>
    <MudNavGroup Title="Settings" Expanded="false">
        <MudNavLink Href="/users">Users</MudNavLink>
        <MudNavLink Href="/security">Security</MudNavLink>
    </MudNavGroup>
    <MudNavLink Href="/about">About</MudNavLink>


</MudNavMenu>

<MudSpacer/>

<MudCardHeader>
    <CardHeaderAvatar>
        <MudAvatar Color="Color.Secondary">@_authenticationState.CurrentUser?.FirstName?.Substring(0,1)@_authenticationState.CurrentUser?.LastName?.Substring(0,1)</MudAvatar>
    </CardHeaderAvatar>
    <CardHeaderContent>
        <MudText Typo="Typo.body1">@_authenticationState.CurrentUser?.FirstName @_authenticationState.CurrentUser?.LastName</MudText>
        <MudText Typo="Typo.body2">@_authenticationState.CurrentUser?.JobTitle</MudText>
    </CardHeaderContent>
    <CardHeaderActions>
        <MudIconButton OnClick="_authenticationState.LogoutUser" Icon="@Icons.Material.Filled.VpnKey" Color="Color.Default"/>
    </CardHeaderActions>
</MudCardHeader>

